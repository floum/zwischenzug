<h2><%= @game.white %> - <%= @game.black %> | <%= @game.result %></h2>

<div class="row">
  <div class="col-6">
    <div id="chessboard"></div>
  </div>
  <div class="col-6"></div>
</div>
<div class="row">
  <div class="offset-1 col-2"><button id="move-back">Back</button></div>
  <div class="col-2"><button id="move-forward">Fwd</button></div>
</div>

  <script type="module">
  import { Chessgame } from 'chessgame';
  const pgn = '<%= j @game.pgn %>';
  const game = new Chessgame(document.getElementById('chessboard'), pgn); 
  game.render();
  </script>

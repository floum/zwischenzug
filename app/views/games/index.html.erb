<h2>Games</h2>

<%= link_to 'New Game', new_game_path %>

<table>
  <thead>
    <tr>
      <td>Players</td>
      <td>Result</td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </thead>
  <tbody>
<% @games.each do |game| %>
  <tr>
  <td><%= "#{game.white} - #{game.black}" %></td>
  <td><%= game.result %></td>
  <td><%= link_to 'View', game_path(game) %></td>
  <td><%= button_to 'New Game Analysis', game_analysis_index_path(game_id: game.id), class: 'btn btn-primary' %></td>
  <td><%= button_to 'delete', game_path(game), method: 'delete' %></td>
<% end %>
  </tbody>
